@model AssistMeProject.Models.Answer

@{
    ViewData["Title"] = "Create";
}

<h4>Question by @ViewData["Questioner"]</h4>
<h4>Title Question: @ViewData["TitleQ"]</h4>
<h4>Question Description : @ViewData["DescriptionQ"]</h4>

<div class="row">
    <div class="col-md-9">

        <div class="page-content ask-question">
            <div class="boxedtitle page-title"><h2>Reply Question</h2></div>

            <div class="form-style form-style-3" id="question-submit">
                <form asp-action="Create" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-inputs clearfix">

                        <p>
                            <label asp-for="Description" class="required">Details<span>*</span></label>
                            <textarea asp-for="Description" id="question-details" aria-required="true" cols="58" rows="8"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </p>
                        @if ((bool)@ViewData["IsRepeat"])
                        {
                        <p>
                            <label asp-for="UrlOriginalQuestion" class="required">Url Original Question</label>
                            <input asp-for="UrlOriginalQuestion" type="url" title="original-url" required/>
                            <asp class="form-description">*Adicione la url de la pregunta original </asp>
                            <span asp-validation-for="UrlOriginalQuestion" class="text-danger"></span>
                        </p>
                        }
                    </div>

                    <input type="hidden" asp-for="QuestionID" />
                    
                    <div class="form-group">
                        <input type="submit" value="Reply" class="button color small submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

                <div>
                    <a asp-controller="Answer" asp-action="Index">Back to list</a>
                </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
