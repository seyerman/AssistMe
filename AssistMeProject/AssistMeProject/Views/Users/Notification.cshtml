@model IEnumerable<AssistMeProject.Models.Notification>

<div class="col-md-9">

    <section class="container main-content">
        <div class="row">
            <div class="col-md-9">

                <div class="tabs-warp question-tab">
                    <ul class="tabs">
                        <li class="tab"><a href="#" class="current">Recent Questions</a></li>
                        <li class="tab"><a href="#">No answers</a></li>
                    </ul>
                    <div class="tab-inner-warp">
                        <div class="tab-inner">
                            @{
                                int counter = 1;
                                foreach (var item in Model)
                                {

                                    <article class="question question-type-normal">
                                        <p style="color: red;">Notificación No. @counter</p>
                                        <h2>
                                            <a asp-controller="Questions" asp-action="Details" asp-route-id="@item.QuestionId"> @Html.DisplayFor(modelItem => item.Description)</a>
                                        </h2>

                                    </article>
                                    counter++;
                                }
                            }
                        </div>
                    </div>

                </div>

            </div><!-- End page-content -->



        </div><!-- End row -->
    </section><!-- End container -->

</div><!-- End main -->
